{
  "version": "4.8.0-alpha",
  "dependencies": {
    "dotnet-test-nunit": "3.4.0-beta-3",
    "Lucene.Net.Analysis.Common": "4.8.0-alpha",
    "Lucene.Net.Queries": "4.8.0-alpha",
    "Lucene.Net.Suggest": "4.8.0-alpha",
    "Lucene.Net.TestFramework": "4.8.0-alpha",
    "NUnit": "3.5.0"
  },

  "buildOptions": {
    "debugType": "portable",
    "embed": {
      "includeFiles": [
        "Suggest/Top50KWiki.utf8"
      ]
    },
    "compile": {
      "includeFiles": [
        "../CommonAssemblyInfo.cs"
      ]
    }
  },

  "testRunner": "nunit",

  "frameworks": {
    "netcoreapp1.0": {
      "imports": "dnxcore50",
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.1"
        }
      },
      "buildOptions": {
        "define": [ "NETSTANDARD" ],
        "compile": {
          "excludeFiles": [
            "Support/TestApiConsistency.cs"
          ]
        }
      }
    },
    "net451": {
      "buildOptions": {
        "define": [ "FEATURE_SERIALIZABLE", "FEATURE_THREAD_PRIORITY" ]
      }
    }
  },
  
  "runtimes": {
    "win7-x86": {},
    "win7-x64": {}
  }
}
